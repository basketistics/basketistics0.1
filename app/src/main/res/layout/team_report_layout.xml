<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:id="@+id/matchImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/basketballteam" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="TuS NeukÃ¶lln"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:layout_editor_absoluteY="8dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_games"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Games: "
                                    android:textSize="28sp" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_win_lose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Win/Lose"
                                    android:textSize="28sp" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Points per game:"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp">

                                <TextView
                                    android:id="@+id/visu_fgs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FG; M/A/%: "
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp">

                                <TextView
                                    android:id="@+id/visu_fgs3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FG3; M/A/%: "
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp">

                                <TextView
                                    android:id="@+id/visu_fts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FT; M/A/%: "
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_rebounds"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rebounds per game:"
                                    android:textSize="28sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_assists"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assists per game:"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_blocks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blocks per game:"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_steals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Steals per game:"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_tov"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Turnover per game:"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_fouls"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fouls per game:"
                                    android:textSize="28sp" />
                            </TableRow>


                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_games_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_win_lose_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/0"
                                    android:textSize="28sp" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_points_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_fgs_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/ 0/ 0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_fgs3_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/ 0/ 0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_fts_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/ 0/ 0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_rebounds_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_assists_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_blocks_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_steals_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_tov_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/visu_fouls_valT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp" />
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>