<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.StartGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="77dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Begegnung"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/matchListItemLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/startHomeTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/machColonDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:padding="8dp"
                        android:text=":"
                        android:textAlignment="center"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        tools:text=":" />

                    <TextView
                        android:id="@+id/startOutTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="sdfsdf"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/startDateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/startCityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:paddingRight="16dp"
                            android:text="TextView\\nTextview"
                            android:textAlignment="center"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/startDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:paddingRight="16dp"
                        android:text="TextView\\nTextview"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="77dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Startaufstellung"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/starter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spieler 1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/starter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spieler 2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/starter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spieler 3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/starter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spieler 4"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/starter5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spieler 5"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/match_startGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spiel starten" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>